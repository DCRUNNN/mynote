    <!--main content start-->
    <section id="main-content" >
        <section class="wrapper">
            <section class="panel">
                <header class="panel-heading">
                    My Info
                    <span class="tools pull-right">
                        <a class="fa fa-arrow-down" href="javascript:;"></a>
                        <a class="fa fa-remove" href="javascript:;"></a>
                    </span>
                </header>

                <div class="panel-body" >
                    <div class="row">
                        <aside class="profile-nav col-lg-3">
                            <section class="panel">
                                <div class="user-heading round">
                                    <a href="#">
                                        <img src="/images/profile-avatar.jpg" alt="">
                                    </a>
                                    <h1><%=user.username%></h1>
                                    <p><%=user.email%></p>
                                </div>

                                <ul class="nav nav-pills nav-stacked">
                                    <li class="active"><a href="/index/myInfo"> <i class="icon-user"></i> 我的资料</a></li>
                                    <li><a href="#" onclick="showEditProfilePanel()"> <i class="icon-edit"></i> 编辑资料</a></li>
