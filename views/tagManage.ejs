<script>

    function showNotebookByTag(){
        var selectedTag = $('#notebook_tag').children('option:selected').val();

        $.ajax({
            data: {notebookTag:selectedTag},
            url: "/tagManage/getNotebookByTag",
            dataType: 'json',
//                        async: false,
            contentType: 'application/json;charset=UTF-8',
            cache: false,
            timeout: 0,
            type: 'get',    // 如果要使用GET方式，则将此处改为'get'
            headers: {
                'Access-Control-Allow-Origin': '*'
            },
            success: function (data) {
                var result = JSON.parse(JSON.stringify(data));
                if (result.message == 'success') {
                    var data = result.data;
                    document.getElementById("notebookTable").innerHTML='<th style="text-align:center">笔记本编号</th><th style="text-align:center">笔记本名称</th><th style="text-align:center">笔记本标签</th><th style="text-align:center">修改</th><th style="text-align:center">删除</th>';
                    for(var i=0; i<data.length;i++){
                        $("#notebookTable").append(
                            "<tr><td>"+data[i].notebookID+
                            "</td><td>"+data[i].title+
                            "</td><td>"+data[i].tag+
                            "</td><td>"+"<button class=\"btn btn-default\" data-toggle=\"modal\" href=\"#modifyUserModal\"><i class=\"fa fa-edit\">修改</i></button>"+
                            "</td><td>"+"<button class=\"btn btn-warning\" data-toggle=\"modal\" href=\"#deleteUserModal\" ><i class=\"fa fa-close\" >删除</i></button>"+
                            "</td><tr>"
                        )
                    }
                } else {
                    alert("获取笔记本信息失败！请刷新重试！");
                }
            },
            error: function () {
                alert("获取笔记本信息失败！请刷新重试！");
            }
        });
    }

    function showPageByTag(){
        var selectedTag = $('#page_tag').children('option:selected').val();

        $.ajax({
            data: {pageTag:selectedTag},
            url: "/tagManage/getPageByTag",
            dataType: 'json',
//                        async: false,
            contentType: 'application/json;charset=UTF-8',
            cache: false,
            timeout: 0,
            type: 'get',    // 如果要使用GET方式，则将此处改为'get'
            headers: {
                'Access-Control-Allow-Origin': '*'
            },
            success: function (data) {
                var result = JSON.parse(JSON.stringify(data));
                if (result.message == 'success') {
                    var data = result.data;
                    document.getElementById("pageTable").innerHTML="<th style=\"text-align:center\">笔记编号</th>\n" +
                        "                                        <th style=\"text-align:center\">笔记名称</th>\n" +
                        "                                        <th style=\"text-align:center\">所属笔记本</th>\n" +
                        "                                        <th style=\"text-align: center\">笔记标签</th>\n" +
                        "                                        <th style=\"text-align:center\">修改</th>\n" +
                        "                                        <th style=\"text-align:center\">删除</th>";
                    for(var i=0; i<data.length;i++){
                        $("#pageTable").append(
                            "<tr><td>"+data[i].pageID+
                            "</td><td>"+data[i].title+
                            "</td><td>"+data[i].notebookID+
                            "</td><td>"+data[i].tag+
                            "</td><td>"+"<button class=\"btn btn-default\" data-toggle=\"modal\" href=\"#modifyUserModal\"><i class=\"fa fa-edit\">修改</i></button>"+
                            "</td><td>"+"<button class=\"btn btn-warning\" data-toggle=\"modal\" href=\"#deleteUserModal\" ><i class=\"fa fa-close\" >删除</i></button>"+
                            "</td><tr>"
                        )
                    }
                } else {
                    alert("获取笔记2信息失败！请刷新重试！");
                }
            },
            error: function () {
                alert("获取笔记信息失败3！请刷新重试！");
            }
        });
    }

    function addNotebookTag(){
        $.ajax({
            data: {
                notebookTag:document.getElementById("notebook_newTag").value
            },
            url: "/tagManage/addNotebookTag",
            dataType: 'json',
//                        async: false,
            contentType: 'application/json;charset=UTF-8',
            cache: false,
            timeout: 0,
            type: 'get',    // 如果要使用GET方式，则将此处改为'get'
            headers: {
                'Access-Control-Allow-Origin': '*'
            },
            success: function () {
                alert("添加笔记本标签成功！");
                window.location.reload();
            },
            error: function () {
                alert("添加笔记本标签失败！");
            }
        });
    }

    function addPageTag(){
        $.ajax({
            data: {
                pageTag:document.getElementById("page_newTag").value
            },
            url: "/tagManage/addPageTag",
            dataType: 'json',
//                        async: false,
            contentType: 'application/json;charset=UTF-8',
            cache: false,
            timeout: 0,
            type: 'get',    // 如果要使用GET方式，则将此处改为'get'
            headers: {
                'Access-Control-Allow-Origin': '*'
            },
            success: function () {
                alert("添加笔记标签成功！");
                window.location.reload();
            },
            error: function () {
                alert("添加笔记标签失败！");
            }
        });

    }

    function getCookieValue(key) {
        var data = decodeURI(document.cookie).split(";");
        for(var i=0;i<data.length;i++) {
            if(data[i].trim().indexOf(key)==0) {
                return data[i].trim();
            }
        }
    }

</script>

